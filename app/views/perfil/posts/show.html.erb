<h1 align="center">Welcome to <%= @author.name %> page</h1>
<div class="row ">
  <div class="gravatar">
    <%= gravatar_for @author, size: 140 %>
  </div>
</div>
<div class="perfil-posts">
  <h5 align="center"><%= @author.name %> posts</h5>
</div>
<div class="row">
  <%= render @posts %>
</div>
<div class="apple_pagination">
  <%= will_paginate @posts, container: false %>
</div>
