<h1 align="center">Welcome to <%= @author.name %>'s page</h1>
<div class="row ">
  <div class="gravatar">
    <img src="<%= h(gravatar_url(@author.email, :size => 140)) %>" alt="Gravatar", style="border-radius: 100px;"/>
  </div>
</div>
<div class="perfil-posts">
  <h5 align="center"><%= @author.name %>'s posts</h5>
</div>
<div class="row">
  <%= render @posts %>
</div>
<div class="apple_pagination">
  <%= will_paginate @posts, container: false %>
</div>
